{
    "name": "azhai/hack-igniter",
    "description": "A example project extends of CodeIgniter v3.x",
    "keywords": ["framework", "cms", "hack-igniter"],
    "license": "MIT",
    "type": "framework",
    "config": {
        "preferred-install": "dist"
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.org"
        }
    },
    "require": {
        "php": ">=5.4.6",
        "codeigniter/framework": "3.*",
        "psr/log": "*",
        "twig/twig": "*",
        "php-curl-class/php-curl-class": "*"
    },
    "require-dev": {
        "nikic/php-parser": "3.*",
        "azhai/code-refactor": "1.*",
        "yosymfony/toml": "*",
        "fzaninotto/faker": "*"
    }
}
